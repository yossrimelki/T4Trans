---
import PageHeader from "@/components/PageHeader.astro";
import config from "@/config/config.json";
import Base from "@/layouts/Base.astro";
import { Image } from "astro:assets";
import { getEntryBySlug } from "astro:content";

const entry = await getEntryBySlug("getstarted", "index");
const { contact_form_action } = config.params;
const contact = entry.data;
const page_data = {
  ...contact,
  content: contact.body,
};
---

<Base
  title={contact.title}
  meta_title={contact.meta_title}
  description={contact.description}
  image={contact.image}
>
  <section class="page-hero pb-6 pt-16">
    <div class="container"><PageHeader page_data={page_data} /></div>
  </section>

  <section class="section pt-0">
    <div class="container">
      <div class="row">
        <div class="mb-10 text-center md:col-6 md:order-2 md:mb-0 md:pt-9">
          <div class="contact-img relative inline-flex pb-5 pl-5">
            <Image
              src="/images/file.png"
              height={544}
              width={500}
              alt=""
            />
          </div>
        </div>
        <div class="md:col-6 md:order-1">
          <form
            class="lg:max-w-[484px]"
            action={contact_form_action}
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="form-group mb-5">
              <label class="form-label" for="reason">Areas</label>
              <select name="reason" id="reason" class="form-select" required>
                <option value="">Select Areas</option>
                <option value="government">Government</option>
                <option value="organization">Organization</option>
                <option value="education">Education</option>
                <option value="media">Media</option>
                <option value="legal-business">Legal & Business</option>
                <option value="science-technology">Science & Technology</option>
              </select>
            </div>
            <div class="form-group mb-5">
              <label class="form-label" for="service">Service</label>
              <select name="service" id="service" class="form-select" required>
                <option value="">Select Service</option>
                <option value="documents">Documents</option>
                <option value="interpretation">Interpretation</option>
                <option value="localization">Localization</option>
                <option value="sign-language">Sign Language</option>
                <option value="authentication">Authentication</option>
              </select>
            </div>
            <div class="form-group mb-5">
              <label class="form-label" for="name">Full Name</label>
              <input
                class="form-control"
                type="text"
                id="name"
                name="name"
                placeholder="Your Full Name"
                required
              />
            </div>
            <div class="form-group mb-5">
              <label class="form-label" for="email">Email Address</label>
              <input
                class="form-control"
                type="email"
                id="email"
                name="email"
                placeholder="Your Email Address"
                required
              />
            </div>
            <div class="form-group mb-5">
              <label class="form-label" for="message">Message Here</label>
              <textarea
                class="form-control h-[150px]"
                id="message"
                name="message"
                cols="30"
                rows="10"
                required
              ></textarea>
            </div>
            <div class="form-group mb-5">
              <label class="form-label" for="file">Upload Files</label>
              <div class="file-upload-wrapper">
                <input
                  class="file-upload-input"
                  type="file"
                  id="file"
                  name="file"
                  multiple
                  hidden
                />
                <button type="button" class="file-upload-btn" onclick="document.getElementById('file').click()">
                  Choose Files
                </button>
                <span id="file-chosen" class="file-chosen">No file chosen</span>
              </div>
            </div>
            <input
              class="btn btn-primary block w-full"
              type="submit"
              value="Submit your Proposal"
            />
          </form>
        </div>
      </div>
    </div>
  </section>
</Base>

<style>
  .file-upload-wrapper {
    position: relative;
    display: flex;
    align-items: center;
  }

  .file-upload-btn {
    background-color: #007bff;
    color: #fff;
    border: none;
    padding: 10px 20px;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .file-upload-btn:hover {
    background-color: #0056b3;
  }

  .file-chosen {
    margin-left: 15px;
    font-size: 14px;
    color: #555;
  }

  .file-upload-input {
    display: none;
  }
</style>

<script>
  const fileInput = document.getElementById('file');
  const fileChosen = document.getElementById('file-chosen');

  fileInput.addEventListener('change', function(){
    const fileNames = Array.from(this.files).map(file => file.name).join(', ');
    fileChosen.textContent = fileNames || 'No file chosen';
  });
</script>
